{
    "info": {
        "_postman_id": "news-digest-api",
        "name": "News Digest API",
        "description": "Collection for testing News Digest Authentication and Preferences APIs.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if(jsonData.token) {",
                                    "    pm.environment.set(\"token\", jsonData.token);",
                                    "    console.log(\"Token saved to environment\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"testuser_{{$timestamp}}@example.com\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if(jsonData.token) {",
                                    "    pm.environment.set(\"token\", jsonData.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"koushikkolla1ga22is082@gmail.com\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Preferences",
            "item": [
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/preferences",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "preferences"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Topics",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"topics\": [\"Technology\", \"Health\", \"Science\"]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/preferences/topics",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "preferences",
                                "topics"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Toggle Subscription",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"isSubscribed\": false\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/preferences/subscribe",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "preferences",
                                "subscribe"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Trigger Digest",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/preferences/manual-digest",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "preferences",
                                "manual-digest"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get News Feed",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/preferences/news",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "preferences",
                                "news"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ]
}